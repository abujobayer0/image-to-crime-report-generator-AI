{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"], // Include latest ECMAScript and DOM features
    "target": "ESNext", // Set the target JavaScript version to ESNext
    "module": "ESNext", // Use ESNext module system
    "moduleDetection": "force", // Force module detection (may be necessary for mixed module types)
    "jsx": "react-jsx", // Enable JSX syntax for React projects
    "allowJs": true, // Allow JavaScript files to be compiled

    // Bundler mode options
    "moduleResolution": "bundler", // Use bundler-style module resolution
    "verbatimModuleSyntax": true, // Keep module imports and exports verbatim

    // Best practices
    "strict": true, // Enable strict type-checking options
    "skipLibCheck": true, // Skip type-checking of declaration files for faster compilation
    "noFallthroughCasesInSwitch": true, // Ensure no fall-through behavior in switch statements

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false, // Allow unused local variables
    "noUnusedParameters": false, // Allow unused function parameters
    "noPropertyAccessFromIndexSignature": false // Disable check for property access through index signature
  }
}
